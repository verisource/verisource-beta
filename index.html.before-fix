<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>VeriSource Beta</title>
<style>
*{margin:0;padding:0;box-sizing:border-box}
body{font-family:-apple-system,BlinkMacSystemFont,'Segoe UI',sans-serif;background:linear-gradient(135deg,#0066CC 0%,#0099FF 50%,#00CCFF 100%);min-height:100vh;padding:20px}
.container{max-width:1200px;margin:0 auto;background:white;border-radius:20px;box-shadow:0 20px 60px rgba(0,102,204,0.3);overflow:hidden}
.login-screen{padding:60px 40px;text-align:center}
.login-screen.hidden{display:none}
.login-screen h1{color:#0066CC;font-size:2.5em;margin-bottom:10px}
.login-screen .subtitle{color:#666;margin-bottom:40px}
.login-form{max-width:400px;margin:0 auto}
.login-form input{width:100%;padding:15px;border:2px solid #B3D9FF;border-radius:10px;margin-bottom:15px}
.login-form input:focus{outline:none;border-color:#0066CC}
.login-form button{width:100%;padding:15px;background:linear-gradient(135deg,#0066CC,#0099FF);color:white;border:none;border-radius:10px;font-weight:600;cursor:pointer}
.error-message{color:#DC3545;margin-top:15px;display:none}
.error-message.show{display:block}
.main-interface{display:none}
.main-interface.show{display:block}
.header{background:linear-gradient(135deg,#0066CC,#0099FF);color:white;padding:30px 40px;display:flex;justify-content:space-between;align-items:center}
.header h1{font-size:2em}
.beta-badge{background:rgba(255,255,255,0.3);padding:4px 12px;border-radius:20px;font-size:0.5em;margin-left:10px}
.logout-btn{background:rgba(255,255,255,0.2);border:2px solid white;color:white;padding:10px 20px;border-radius:8px;cursor:pointer}
.tabs{display:flex;background:#F0F8FF;border-bottom:2px solid #CCE5FF}
.tab{flex:1;padding:20px;text-align:center;background:none;border:none;border-bottom:3px solid transparent;cursor:pointer;font-size:1.1em;font-weight:600;color:#5B9BD5}
.tab:hover{background:rgba(0,102,204,0.05)}
.tab.active{color:#0066CC;background:white;border-bottom-color:#0066CC}
.tab-content{display:none;padding:40px}
.tab-content.active{display:block}
.upload-area{border:3px dashed #B3D9FF;border-radius:16px;padding:60px;text-align:center;cursor:pointer;background:#F0F8FF}
.upload-area:hover{border-color:#0066CC;background:#E6F2FF}
.upload-icon{font-size:64px;margin-bottom:20px}
.upload-text{font-size:1.3em;color:#0066CC;font-weight:600;margin-bottom:10px}
input[type="file"]{display:none}
.btn-primary{width:100%;padding:15px;background:linear-gradient(135deg,#0066CC,#0099FF);color:white;border:none;border-radius:10px;font-weight:600;cursor:pointer;margin-top:20px}
.btn-primary:disabled{opacity:0.5}
.loading{display:none;text-align:center;padding:40px}
.loading.show{display:block}
.spinner{width:50px;height:50px;border:4px solid #F0F8FF;border-top:4px solid #0066CC;border-radius:50%;animation:spin 1s linear infinite;margin:0 auto 20px}
@keyframes spin{to{transform:rotate(360deg)}}
.results{display:none;margin-top:30px}
.results.show{display:block}
.verdict-section{background:white;border-radius:16px;padding:40px;text-align:center;margin-bottom:20px}
.verdict-high{border-left:6px solid #28A745}
.verdict-medium{border-left:6px solid #FFC107}
.verdict-low{border-left:6px solid #DC3545}
.verdict-icon{font-size:64px;margin-bottom:20px}
.verdict-title{font-size:2em;font-weight:700;margin-bottom:10px}
.verdict-high .verdict-title{color:#28A745}
.verdict-medium .verdict-title{color:#FFC107}
.verdict-low .verdict-title{color:#DC3545}
.score-bar{width:100%;height:30px;background:#F0F8FF;border-radius:15px;overflow:hidden;margin:20px 0}
.score-fill{height:100%;color:white;font-weight:700;display:flex;align-items:center;justify-content:flex-end;padding-right:15px}
.score-fill.high{background:linear-gradient(90deg,#28A745,#5CB85C)}
.score-fill.medium{background:linear-gradient(90deg,#FFC107,#FFD54F)}
.score-fill.low{background:linear-gradient(90deg,#DC3545,#E57373)}
.checklist{max-width:700px;margin:30px auto;text-align:left}
.check-item{display:flex;gap:15px;padding:15px;background:#F0F8FF;border-radius:10px;margin-bottom:10px;border-left:4px solid transparent}
.check-good{border-left-color:#28A745}
.check-warning{border-left-color:#FFC107}
.check-bad{border-left-color:#DC3545}
.check-icon{font-size:24px}
.check-title{font-weight:600;color:#0066CC;margin-bottom:5px}
.check-subtitle{color:#5B9BD5;font-size:0.95em}
.fingerprints-section{background:#F0F8FF;border-radius:16px;padding:30px;margin:20px 0}
.fingerprint-item{background:white;padding:15px;border-radius:10px;margin-bottom:15px}
.fingerprint-label{font-size:0.85em;color:#5B9BD5;font-weight:600;margin-bottom:8px}
.fingerprint-value{font-family:monospace;color:#0066CC;word-break:break-all}
.batch-summary{background:white;border-radius:16px;padding:30px;margin-top:20px}
.batch-summary h3{color:#0066CC;margin-bottom:20px}
.summary-grid{display:grid;grid-template-columns:repeat(4,1fr);gap:20px;margin-bottom:30px}
.summary-item{text-align:center;padding:20px;background:#F0F8FF;border-radius:12px}
.summary-value{font-size:2.5em;font-weight:700;color:#0066CC}
.summary-label{color:#5B9BD5;font-size:0.9em}
</style>
</head>
<body>
<div class="container">
<div class="login-screen" id="loginScreen">
<h1>üîç VeriSource</h1>
<p class="subtitle">Content Verification Platform</p>
<div class="login-form">
<input type="password" id="passwordInput" placeholder="Enter beta password" onkeypress="if(event.key==='Enter')login()">
<button onclick="login()">Access Beta</button>
</div>
<div class="error-message" id="errorMessage">Incorrect password</div>
</div>
<div class="main-interface" id="mainInterface">
<div class="header">
<h1>üîç VeriSource<span class="beta-badge">BETA</span></h1>
<button class="logout-btn" onclick="logout()">Logout</button>
</div>
<div class="tabs">
<button class="tab active" onclick="switchTab('single')">Single Upload</button>
<button class="tab" onclick="switchTab('bulk')">Bulk Upload</button>
</div>
<div class="tab-content active" id="singleTab">
<div class="upload-area" onclick="document.getElementById('singleFile').click()">
<div class="upload-icon">üìÅ</div>
<div class="upload-text">Drop file here or click to browse</div>
<p style="color:#5B9BD5">Supports images, videos, and audio files</p>
</div>
<input type="file" id="singleFile" onchange="uploadSingle(this.files[0])">
<div class="loading" id="singleLoading">
<div class="spinner"></div>
<div class="loading-text">Analyzing file...</div>
</div>
<div class="results" id="singleResults"></div>
</div>
<div class="tab-content" id="bulkTab">
<div class="upload-area" onclick="document.getElementById('bulkFiles').click()">
<div class="upload-icon">üìÇ</div>
<div class="upload-text">Drop multiple files here</div>
<p style="color:#5B9BD5">Upload up to 100 images at once</p>
</div>
<input type="file" id="bulkFiles" multiple accept="image/*" onchange="uploadBulk(this.files)">
<button class="btn-primary" id="bulkUploadBtn" style="display:none" onclick="processBulk()">Upload <span id="fileCount"></span> Files</button>
<div class="loading" id="bulkLoading">
<div class="spinner"></div>
<div class="loading-text">Processing batch...</div>
</div>
<div class="results" id="bulkResults"></div>
</div>
</div>
</div>
<script>
const API_URL='https://api.verisource.io';
let selectedBulkFiles=[];
function login(){
const pwd=document.getElementById('passwordInput').value;
if(pwd==='verisource-beta-2024'){
document.getElementById('loginScreen').classList.add('hidden');
document.getElementById('mainInterface').classList.add('show');
}else{
document.getElementById('errorMessage').classList.add('show');
}
}
function logout(){
document.getElementById('loginScreen').classList.remove('hidden');
document.getElementById('mainInterface').classList.remove('show');
document.getElementById('passwordInput').value='';
}
function switchTab(tab){
document.querySelectorAll('.tab').forEach(t=>t.classList.remove('active'));
document.querySelectorAll('.tab-content').forEach(t=>t.classList.remove('active'));
if(tab==='single'){
document.querySelectorAll('.tab')[0].classList.add('active');
document.getElementById('singleTab').classList.add('active');
}else{
document.querySelectorAll('.tab')[1].classList.add('active');
document.getElementById('bulkTab').classList.add('active');
}
}
async function uploadSingle(file){
if(!file)return;
document.getElementById('singleLoading').classList.add('show');
document.getElementById('singleResults').classList.remove('show');
const formData=new FormData();
formData.append('file',file);
try{
const res=await fetch(`${API_URL}/verify`,{method:'POST',body:formData})
const data=await res.json();
displaySingleResult(data);
}catch(e){
alert('Upload failed: '+e.message);
}finally{
document.getElementById('singleLoading').classList.remove('show');
}
}
function displaySingleResult(data){
const conf=data.confidence||{};
const score=conf.score||0;
const level=conf.level||'MEDIUM';
let verdictClass='verdict-medium';
let icon='‚ö†Ô∏è';
let title='VERIFICATION INCOMPLETE';
if(level==='HIGH'){verdictClass='verdict-high';icon='‚úì';title='CONTENT VERIFIED'}
else if(level==='LOW'){verdictClass='verdict-low';icon='üö®';title='AUTHENTICITY CONCERNS'}
let html=`
<div class="verdict-section ${verdictClass}">
<div class="verdict-icon">${icon}</div>
<div class="verdict-title">${title}</div>
<div class="score-bar"><div class="score-fill ${level.toLowerCase()}" style="width:${score}%">${score}%</div></div>
</div>`;
if(data.canonical){
html+=`<div class="fingerprints-section">
<div class="fingerprint-item">
<div class="fingerprint-label">SHA-256</div>
<div class="fingerprint-value">${data.canonical.sha256||'N/A'}</div>
</div>
<div class="fingerprint-item">
<div class="fingerprint-label">Perceptual Hash</div>
<div class="fingerprint-value">${data.canonical.phash||'N/A'}</div>
</div>
</div>`;
}
document.getElementById('singleResults').innerHTML=html;
document.getElementById('singleResults').classList.add('show');
}
function uploadBulk(files){
if(!files.length)return;
selectedBulkFiles=Array.from(files);
document.getElementById('fileCount').textContent=files.length;
document.getElementById('bulkUploadBtn').style.display='block';
}
async function processBulk(){
if(!selectedBulkFiles.length)return;
document.getElementById('bulkLoading').classList.add('show');
document.getElementById('bulkResults').classList.remove('show');
const formData=new FormData();
selectedBulkFiles.forEach(f=>formData.append('files',f));
try{
const res=await fetch(`${API_URL}/api/verify/batch`,{method:'POST',body:formData})
const data=await res.json();
displayBulkResult(data);
}catch(e){
alert('Batch upload failed: '+e.message);
}finally{
document.getElementById('bulkLoading').classList.remove('show');
}
}
function displayBulkResult(data){
const html=`
<div class="batch-summary">
<h3>‚úÖ Batch Complete</h3>
<div class="summary-grid">
<div class="summary-item"><div class="summary-value">${data.summary.total}</div><div class="summary-label">Total</div></div>
<div class="summary-item"><div class="summary-value">${data.summary.successful}</div><div class="summary-label">Success</div></div>
<div class="summary-item"><div class="summary-value">${data.summary.failed}</div><div class="summary-label">Failed</div></div>
<div class="summary-item"><div class="summary-value">${data.summary.duplicatesFound}</div><div class="summary-label">Duplicates</div></div>
</div>
<button class="btn-primary" onclick="window.open('${API_URL}${data.links.dashboard}','_blank')">View Dashboard</button>
<button class="btn-primary" onclick="window.open('${API_URL}${data.links.csv}','_blank')" style="margin-top:10px">Download CSV</button>
</div>`;
document.getElementById('bulkResults').innerHTML=html;
document.getElementById('bulkResults').classList.add('show');
}
</script>
</body>
</html>
